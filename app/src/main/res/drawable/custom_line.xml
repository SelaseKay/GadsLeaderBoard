<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:left="50dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/underline_color"
                android:endColor="@color/dark"
                android:centerColor="@color/dark"
                android:angle="0"
                android:centerX="100%"/>
            <size
                android:height="0.1dp"
                android:width="50dp"/>
            <corners
                android:topRightRadius="20dp"
                android:bottomRightRadius="20dp"/>
        </shape>
    </item>
    <item
        android:right="50dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/dark"
                android:endColor="@color/underline_color"
                android:centerColor="@color/dark"
                android:angle="0"
                android:centerX="0%"/>
            <size
                android:height="0.1dp"
                android:width="50dp"/>
            <corners
                android:topLeftRadius="20dp"
                android:bottomLeftRadius="20dp"/>
        </shape>
    </item>
</layer-list>